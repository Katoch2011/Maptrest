<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashishgupta.poi2.MainActivity"
    android:background="#fff">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/info"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:background="@drawable/info" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Camera"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:background="@drawable/camera" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Search"
        android:background="@drawable/search"
        android:layout_alignTop="@+id/Camera"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Camera"
        android:id="@+id/textView"
        android:layout_below="@+id/Camera"
        android:layout_alignLeft="@+id/Camera"
        android:layout_alignStart="@+id/Camera"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Search"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/Search"
        android:layout_alignStart="@+id/Search"
        android:layout_marginTop="3dp"
        android:gravity="center" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/History"
        android:layout_marginTop="46dp"
        android:background="@drawable/museum"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="History"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/History"
        android:layout_alignStart="@+id/History" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/Lesuire"
        android:background="@drawable/video"
        android:layout_alignTop="@+id/History"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lesuire"
        android:id="@+id/textView4"
        android:layout_below="@+id/Lesuire"
        android:layout_alignLeft="@+id/Lesuire"
        android:layout_alignStart="@+id/Lesuire"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/General"
        android:background="@drawable/organization"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="General"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView2" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="27dp"
        android:background="@drawable/book"
        android:id="@+id/Educational" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Education"
        android:id="@+id/textView6"
        android:layout_below="@+id/Educational"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/viewall"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="@drawable/viewall" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ViewAll"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/viewall"
        android:layout_alignStart="@+id/viewall" />

</RelativeLayout>